<body class="light">

    <button id="toggleSidebar">â˜°</button>

    <!-- SIDEBAR -->
    <aside id="sidebar">
        <h2>Menu</h2>

        <!-- THEMES -->
        <section>
            <h3><span class="icon">ğŸŒ—</span> Themes</h3>
            <button onclick="setTheme('light')"><span class="icon">ğŸŒ</span> Light</button>
            <button onclick="setTheme('dark')"><span class="icon">ğŸŒ™</span> Dark</button>
        </section>

        <!-- LANGUAGES -->
        <section>
            <h3><span class="icon">ğŸŒ</span> Languages</h3>
            <button onclick="setLanguage('en')"><span class="icon">ğŸ‡¬ğŸ‡§</span> English</button>
            <button onclick="setLanguage('fr')"><span class="icon">ğŸ‡«ğŸ‡·</span> French</button>
            <button onclick="setLanguage('kin')"><span class="icon">ğŸ‡·ğŸ‡¼</span> Kinyarwanda</button>
        </section>

        <!-- SETTINGS -->
        <section>
            <h3>Settings</h3>
            <ul>
                <li onclick="openPage('profile')"><span class="icon">ğŸ‘¤</span> Profile</li>
                <li onclick="openPage('help')"><span class="icon">â“</span> Help</li>
                <li onclick="openPage('notifications')"><span class="icon">ğŸ””</span> Notifications</li>
                <li onclick="logout()"><span class="icon">â‹</span> Logout</li>
            </ul>
        </section>
    </aside>

    <main id="content">
        <h1 id="pageTitle">Welcome</h1>
        <p id="pageDescription">Choose options from the sidebar.</p>
    </main>

    <script>
        // -------------------------------
        // GLOBAL SIDEBAR TOGGLE
        // -------------------------------
        document.getElementById("toggleSidebar").onclick = () => {
            document.getElementById("sidebar").classList.toggle("open");
        };

        // -------------------------------
        // THEMES
        // -------------------------------
        function setTheme(theme) {
            document.body.className = theme;
            localStorage.setItem("theme", theme);
        }

        function loadTheme() {
            const savedTheme = localStorage.getItem("theme") || "light";
            document.body.className = savedTheme;
        }

        // -------------------------------
        // TRANSLATIONS
        // -------------------------------
        const translations = {
            en: {
                title: "Welcome",
                description: "Choose options from the sidebar.",
                profile: "This is your profile page.",
                help: "How can we help you?",
                notifications: "These are your notifications."
            },
            fr: {
                title: "Bienvenue",
                description: "Choisissez des options depuis le menu.",
                profile: "Voici votre profil.",
                help: "Comment pouvons-nous vous aider ?",
                notifications: "Voici vos notifications."
            },
            kin: {
                title: "Murakaza neza",
                description: "Hitamo ibintu uri ku ruhande.",
                profile: "Aha niho profile yawe iri.",
                help: "Twagufasha dute?",
                notifications: "Ubutumwa bwawe buri hano."
            }
        };

        // Change language
        function setLanguage(lang) {
            localStorage.setItem("language", lang);
            applyLanguage();
        }

        // Load saved language
        function applyLanguage() {
            const lang = localStorage.getItem("language") || "en";
            const t = translations[lang];

            document.getElementById("pageTitle").textContent = t.title;
            document.getElementById("pageDescription").textContent = t.description;
        }

        // -------------------------------
        // PAGE SWITCHING
        // -------------------------------
        function openPage(page) {
            const lang = localStorage.getItem("language") || "en";
            const t = translations[lang];

            document.getElementById("pageTitle").textContent =
                page.charAt(0).toUpperCase() + page.slice(1);

            document.getElementById("pageDescription").textContent =
                t[page] || t.description;
        }

        // -------------------------------
        // LOGOUT
        // -------------------------------
        function logout() {
            alert("You are now logged out.");
            window.location.href = "login.html";
        }

        // -------------------------------
        // ON PAGE LOAD
        // -------------------------------
        window.onload = () => {
            loadTheme();
            applyLanguage();
        };
    </script>

</body>
</html>

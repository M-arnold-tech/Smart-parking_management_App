            left: -260px;
            padding: 20px;
            transition: 0.4s;
            overflow-y: auto;
            z-index: 999;
        }

        #sidebar.open {
            left: 0;
        }

        #toggleSidebar {
            padding: 10px 15px;
            background: purple;
            border: none;
